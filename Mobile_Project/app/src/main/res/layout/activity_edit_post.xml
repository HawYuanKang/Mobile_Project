<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listgrad"
    tools:context=".EditPostActivity">

    <Button
        android:id="@+id/button_post2"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="216dp"
        android:backgroundTint="#2196F3"
        android:onClick="fn_update"
        android:text="Update"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_clear2"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="#E91E63"
        android:onClick="fn_delete"
        android:text="Delete"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_username4"
        android:layout_width="250dp"
        android:layout_height="26dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="81dp"
        android:fontFamily="@font/work_sans"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_username5"
        android:layout_width="250dp"
        android:layout_height="26dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="81dp"
        android:fontFamily="@font/work_sans"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pepeface" />

    <Button
        android:id="@+id/button2"
        android:layout_width="279dp"
        android:layout_height="48dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#673AB7"
        android:onClick="fn_camera"
        android:text="Open Camera"
        app:cornerRadius="30dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_title2"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="28dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Write the title here"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_description2"
        android:layout_width="355dp"
        android:layout_height="153dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="28dp"
        android:background="#FFFFFF"
        android:gravity="top|start"
        android:hint="Write some description here"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:scrollbars="vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>